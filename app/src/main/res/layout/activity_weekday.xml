<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="0.5dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cb7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:text="S"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:gravity="center"
        android:text="M"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb7"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:gravity="center"
        android:text="T"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb1"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:gravity="center"
        android:text="W"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb2"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:gravity="center"
        android:text="T"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb3"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:gravity="center"
        android:text="F"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb4"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:gravity="center"
        android:text="S"
        android:textAllCaps="true"
        android:textColor="@color/check_box_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cb5"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>