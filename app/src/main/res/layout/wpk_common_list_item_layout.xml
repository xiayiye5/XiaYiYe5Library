<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingRight="8dp"
    android:background="@drawable/ic_launcher_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_icon2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="List Item"
                android:textColor="@color/wyze_main_text_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_explain"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_info_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title_left"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="info"
            android:textColor="@color/color_7E8D92"
            android:textSize="14sp"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_info_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:text="info"
        android:textColor="@color/color_515963"
        android:textSize="14sp" />

    <cn.xiayiye5.xiayiye5library.WpkSwitchButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:kswBackColor="@color/class_O"
        app:kswThumbColor="@color/white"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher_background" />



</LinearLayout>